{% extends 'base.html.twig' %}

{% block body %}
  <h1>Car</h1>
  <form>
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label"><b>Reseach</b></label>
      <input type="text" class="form-control" placeholder="Information" aria-describedby="emailHelp">
      <button type="researchText" class="btn btn-primary">Research</button>
    </div>
  </form>

  <table>
    <tbody>
    <tr>
      <th>Id</th>
      <td>{{ car.id }}</td>
    </tr>
    <tr>
      <th>Make</th>
      <td>{{ car.make }}</td>
    </tr>
    <tr>
      <th>Model</th>
      <td>{{ car.model }}</td>
    </tr>
    <tr>
      <th>Travelleddistance</th>
      <td>{{ car.travelledDistance }}</td>
    </tr>
    </tbody>
  </table>

  <ul>
    <li>
      <a href="{{ path('car_index') }}">Back to the list</a>
      <a href="{{ path('customer') }}">Back to the list</a>
    </li>
  </ul>

{% endblock %}